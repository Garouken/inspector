<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="Form.css" />
	<g:HTMLPanel addStyleNames="{style.formContainer}">
	<h2>Hacer un Comentario</h2>
		<p>Seleccione un parlamentario:</p>
		<g:ListBox ui:field="parlamentarianList"  addStyleNames="{style.formListBox}"></g:ListBox>
		<p>Titulo:</p> <g:TextBox ui:field="commentSubject"></g:TextBox>
		<p>Comentario:</p> <g:TextArea ui:field="commentBody" addStyleNames="{style.formTextArea}"></g:TextArea>
		<br/>
		<g:Button ui:field="commentSubmit">Enviar</g:Button>
		<g:Button ui:field="commentClear">Limpiar</g:Button>
	</g:HTMLPanel>
</ui:UiBinder>
